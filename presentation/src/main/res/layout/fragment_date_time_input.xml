<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".DateTimeInputFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/question_header"
            layout="@layout/include_question_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="35dp"
            android:text="@string/approximate_date"
            app:layout_constraintBottom_toTopOf="@+id/textFieldMonth"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/question_header" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textFieldMonth"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="30dp"
            android:hint="@string/month"
            android:theme="@style/EditTextThemeOverlay"
            app:layout_constraintEnd_toStartOf="@+id/textFieldDay"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/question_header">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputMonth"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="datetime"
                app:layout_constraintVertical_bias="0.546" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textFieldDay"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="30dp"
            android:hint="@string/date"
            android:theme="@style/EditTextThemeOverlay"
            app:layout_constraintEnd_toStartOf="@+id/textFieldYear"
            app:layout_constraintStart_toEndOf="@+id/textFieldMonth"
            app:layout_constraintTop_toBottomOf="@+id/question_header">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputDay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="datetime"
                app:layout_constraintVertical_bias="0.546" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textFieldYear"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="30dp"
            android:hint="@string/year"
            android:theme="@style/EditTextThemeOverlay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textFieldDay"
            app:layout_constraintTop_toBottomOf="@+id/question_header">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputYear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="datetime"

                app:layout_constraintVertical_bias="0.546" />

        </com.google.android.material.textfield.TextInputLayout>

        <org.sagebionetworks.assessmentmodel.presentation.views.StepNavigationBar
            android:id="@+id/nav_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>